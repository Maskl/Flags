<phone:PhoneApplicationPage x:Class="Flags.HistoryWindowView"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
                            xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
                            mc:Ignorable="d"
                            d:DesignWidth="480"
                            d:DesignHeight="800"
                            FontFamily="{StaticResource PhoneFontFamilyNormal}"
                            FontSize="{StaticResource PhoneFontSizeNormal}"
                            Foreground="{StaticResource PhoneForegroundBrush}"
                            SupportedOrientations="Portrait"
                            Orientation="Portrait"
                            shell:SystemTray.IsVisible="False"
                            DataContext="{Binding HistoryWindowVm, Source={StaticResource Locator}}"
                            Style="{StaticResource DefaultPageStyle}">

    <Grid Margin="13">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*" />
            <ColumnDefinition Width="385*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1"
              Grid.Column="1">
            <ScrollViewer>
                <StackPanel Width="388">


                    <!-- ITA -->
                    <TextBlock TextWrapping="Wrap"
                               Margin="0"
                               FontSize="21.333"
                               Text="If you have flag:" />

                    <StackPanel Orientation="Horizontal">
                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0">
                            <Image Source="/FlagsWP7;component/Media/Flags/100/it.png"
                                   Height="45" />
                        </Border>
                    </StackPanel>

                    <TextBlock TextWrapping="Wrap"
                               Margin="0"
                               FontSize="21.333"
                               Text="the best option is to select:" />

                    <StackPanel Orientation="Horizontal">
                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0"
                                Height="30"
                                Width="30">
                            <Border.Background>
                                <SolidColorBrush Color="Green" />
                            </Border.Background>
                        </Border>

                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0"
                                Height="30"
                                Width="30">
                            <Border.Background>
                                <SolidColorBrush Color="White" />
                            </Border.Background>
                        </Border>

                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0"
                                Height="30"
                                Width="30">
                            <Border.Background>
                                <SolidColorBrush Color="Red" />
                            </Border.Background>
                        </Border>


                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0">
                            <Border.Background>
                                <SolidColorBrush Color="{StaticResource PhoneAccentColor}" />
                            </Border.Background>
                            <Image Source="/FlagsWP7;component/Media/Shapes/wp7shape1.png"
                                   Height="30" />
                        </Border>
                    </StackPanel>


                    <TextBlock TextWrapping="Wrap"
                               Margin="0, 0, 0, 13"
                               FontSize="21.333"
                               Text="and click search button." />

                    <!-- USA -->
                    <TextBlock TextWrapping="Wrap"
                               FontSize="21.333"
                               Margin="0"
                               Text="Some harder examples:" />

                    <StackPanel Orientation="Horizontal">
                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 13">
                            <Image Source="/FlagsWP7;component/Media/Flags/100/us.png"
                                   Height="45" />
                        </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="0, 0, 0, 26">
                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0"
                                Width="30">
                            <Border.Background>
                                <SolidColorBrush Color="Red" />
                            </Border.Background>
                        </Border>

                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0"
                                Width="30">
                            <Border.Background>
                                <SolidColorBrush Color="Blue" />
                            </Border.Background>
                        </Border>

                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0"
                                Width="30">
                            <Border.Background>
                                <SolidColorBrush Color="White" />
                            </Border.Background>
                        </Border>

                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0">
                            <Border.Background>
                                <SolidColorBrush Color="{StaticResource PhoneAccentColor}" />
                            </Border.Background>
                            <Image Source="/FlagsWP7;component/Media/Shapes/wp7shape5.png"
                                   Height="30" />
                        </Border>

                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0">
                            <Border.Background>
                                <SolidColorBrush Color="{StaticResource PhoneAccentColor}" />
                            </Border.Background>
                            <Image Source="/FlagsWP7;component/Media/Adds/wp7add2.png"
                                   Height="30" />
                        </Border>
                    </StackPanel>

                    <!-- GB -->
                    <StackPanel Orientation="Horizontal">
                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 13">
                            <Image Source="/FlagsWP7;component/Media/Flags/100/gb.png"
                                   Height="45" />
                        </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="0, 0, 0, 26">
                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0"
                                Width="30">
                            <Border.Background>
                                <SolidColorBrush Color="Red" />
                            </Border.Background>
                        </Border>

                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0"
                                Width="30">
                            <Border.Background>
                                <SolidColorBrush Color="Blue" />
                            </Border.Background>
                        </Border>

                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0"
                                Width="30">
                            <Border.Background>
                                <SolidColorBrush Color="White" />
                            </Border.Background>
                        </Border>

                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0">
                            <Border.Background>
                                <SolidColorBrush Color="{StaticResource PhoneAccentColor}" />
                            </Border.Background>
                            <Image Source="/FlagsWP7;component/Media/Adds/wp7add5.png"
                                   Height="30" />
                        </Border>

                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0">
                            <Border.Background>
                                <SolidColorBrush Color="{StaticResource PhoneAccentColor}" />
                            </Border.Background>
                            <Image Source="/FlagsWP7;component/Media/Adds/wp7add7.png"
                                   Height="30" />
                        </Border>

                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0">
                            <Border.Background>
                                <SolidColorBrush Color="{StaticResource PhoneAccentColor}" />
                            </Border.Background>
                            <Image Source="/FlagsWP7;component/Media/Adds/wp7add8.png"
                                   Height="30" />
                        </Border>
                    </StackPanel>

                    <!-- Mauretania -->
                    <StackPanel Orientation="Horizontal">
                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 13">
                            <Image Source="/FlagsWP7;component/Media/Flags/100/mr.png"
                                   Height="45" />
                        </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="0, 0, 0, 26">
                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0"
                                Width="30">
                            <Border.Background>
                                <SolidColorBrush Color="Green" />
                            </Border.Background>
                        </Border>

                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0"
                                Width="30">
                            <Border.Background>
                                <SolidColorBrush Color="Yellow" />
                            </Border.Background>
                        </Border>

                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0">
                            <Border.Background>
                                <SolidColorBrush Color="{StaticResource PhoneAccentColor}" />
                            </Border.Background>
                            <Image Source="/FlagsWP7;component/Media/Adds/wp7add1.png"
                                   Height="30" />
                        </Border>
                    </StackPanel>


                    <!-- Pakistan -->
                    <StackPanel Orientation="Horizontal">
                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 13">
                            <Image Source="/FlagsWP7;component/Media/Flags/100/pk.png"
                                   Height="45" />
                        </Border>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="0">
                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0"
                                Width="30">
                            <Border.Background>
                                <SolidColorBrush Color="Green" />
                            </Border.Background>
                        </Border>

                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0"
                                Width="30">
                            <Border.Background>
                                <SolidColorBrush Color="White" />
                            </Border.Background>
                        </Border>

                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0">
                            <Border.Background>
                                <SolidColorBrush Color="{StaticResource PhoneAccentColor}" />
                            </Border.Background>
                            <Image Source="/FlagsWP7;component/Media/Shapes/wp7shape6.png"
                                   Height="30" />
                        </Border>

                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0">
                            <Border.Background>
                                <SolidColorBrush Color="{StaticResource PhoneAccentColor}" />
                            </Border.Background>
                            <Image Source="/FlagsWP7;component/Media/Adds/wp7add4.png"
                                   Height="30" />
                        </Border>

                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0">
                            <Border.Background>
                                <SolidColorBrush Color="{StaticResource PhoneAccentColor}" />
                            </Border.Background>
                            <Image Source="/FlagsWP7;component/Media/Adds/wp7add1.png"
                                   Height="30" />
                        </Border>
                    </StackPanel>

                    <TextBlock TextWrapping="Wrap"
                               Margin="0, 0, 0, 0"
                               FontSize="21.333"
                               Text="or" />

                    <StackPanel Orientation="Horizontal"
                                Margin="0, 0, 0, 26">
                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0"
                                Width="30">
                            <Border.Background>
                                <SolidColorBrush Color="Green" />
                            </Border.Background>
                        </Border>

                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0"
                                Width="30">
                            <Border.Background>
                                <SolidColorBrush Color="White" />
                            </Border.Background>
                        </Border>

                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0">
                            <Border.Background>
                                <SolidColorBrush Color="{StaticResource PhoneAccentColor}" />
                            </Border.Background>
                            <Image Source="/FlagsWP7;component/Media/Shapes/wp7shape2.png"
                                   Height="30" />
                        </Border>

                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource PhoneBorderBrush}"
                                Margin="13, 0, 0, 0">
                            <Border.Background>
                                <SolidColorBrush Color="{StaticResource PhoneAccentColor}" />
                            </Border.Background>
                            <Image Source="/FlagsWP7;component/Media/Adds/wp7add1.png"
                                   Height="30" />
                        </Border>
                    </StackPanel>

                    <TextBlock TextWrapping="Wrap"
                               Margin="0, 0, 0, 26"
                               FontSize="21.333"
                               Text="Good luck and have fun :)" />

                    <Button Margin="-12, 0, 0, 0"
                            Content="Rate this application!"
                            Padding="0"
                            Click="RateButtonClick" />
                </StackPanel>
            </ScrollViewer>
        </Grid>


        <StackPanel Grid.Column="0"
                    Grid.Row="1">
            <Button BorderThickness="0"
                    Margin="-4,30,0,0"
                    Padding="0"
                    Background="{StaticResource PhoneForegroundBrush}"
                    Height="72"
                    Width="72"
                    Click="BackIconButtonClick">
                <Button.OpacityMask>
                    <ImageBrush  Stretch="None"
                                 ImageSource="/FlagsWP7;component/Media/Icons/IconBack.png" />
                </Button.OpacityMask>
            </Button>
        </StackPanel>

        <TextBlock Grid.Column="1"
                   Margin="0,8,8,0"
                   TextWrapping="Wrap"
                   Text="flag recognizer"
                   FontSize="16"
                   Height="24"
                   VerticalAlignment="Top">
        	<TextBlock.Foreground>
        		<SolidColorBrush Color="{StaticResource PhoneBorderColor}" />
        	</TextBlock.Foreground>
        </TextBlock>

        <TextBlock Grid.Column="1"
                   Margin="0,32,8,0"
                   TextWrapping="Wrap"
                   Text="HISTORY"
                   FontSize="29.333">
        	<TextBlock.Foreground>
        		<SolidColorBrush Color="{StaticResource PhoneAccentColor}" />
        	</TextBlock.Foreground>
        </TextBlock>

    </Grid>

</phone:PhoneApplicationPage>