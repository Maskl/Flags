        			</Border>

        			<Border BorderThickness="1"
        				BorderBrush="Black"
        				Margin="13, 0, 0, 0">
        				<Image Source="/FlagsWPF;component/Media/Adds/add4.png"
        					Height="30" />
        			</Border>

        			<Border BorderThickness="1"
        				BorderBrush="Black"
        				Margin="13, 0, 0, 0">
        				<Image Source="/FlagsWPF;component/Media/Adds/add1.png"
        					Height="30" />
        			</Border>
        		</StackPanel>

        		<TextBlock TextWrapping="Wrap"
        			Margin="0, 0, 0, 0"
        			FontSize="21.333"
        			Text="or" />

        		<StackPanel Orientation="Horizontal"
        			Margin="0, 0, 0, 26">
        			<Border BorderThickness="1"
        				BorderBrush="Black"
        				Margin="13, 0, 0, 0"
        				Width="30"/>

        			<Border BorderThickness="1"
        				BorderBrush="Black"
        				Margin="13, 0, 0, 0"
        				Width="30" Background="White"/>

        			<Border BorderThickness="1"
        				BorderBrush="Black"
        				Margin="13, 0, 0, 0">
        				<Image Source="/FlagsWPF;component/Media/Shapes/shape2.png"
        					Height="30" />
        			</Border>

        			<Border BorderThickness="1"
        				BorderBrush="Black"
        				Margin="13, 0, 0, 0">
        				<Image Source="/FlagsWPF;component/Media/Adds/add1.png"
        					Height="30" />
        			</Border>
        		</StackPanel>

        		<TextBlock TextWrapping="Wrap"
        			Margin="0, 0, 0, 26"
        			FontSize="21.333"
        			Text="Good luck and have fun :)" />

        	</StackPanel>
        </ScrollViewer>
        <Button Content="Cancel"
        	Height="25.833"
        	IsCancel="True"
        	d:LayoutOverrides="GridBox" Margin="274.161,0,237.162,8" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="109.893" />

    </Grid>
</Window>
