                          Margin="10,0"
                          IsChecked="{Binding AddNumber, Converter={StaticResource IntegerToBinaryFlagsConverter}, ConverterParameter='5'}">
                    <Button Content=""
                            Width="100"
                            Height="60"
                            IsHitTestVisible="False">
                        <Button.Background>
                            <ImageBrush ImageSource="/FlagsWPF;component/Media/Adds/add6.png" />
                        </Button.Background>
