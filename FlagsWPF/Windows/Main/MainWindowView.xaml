                <CheckBox HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Margin="10,0"
                          IsChecked="{Binding AddNumber, Converter={StaticResource IntegerToBinaryFlagsConverter}, ConverterParameter='4'}">
