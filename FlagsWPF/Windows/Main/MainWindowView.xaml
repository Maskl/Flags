                            Width="100"
                            Height="60"
                            IsHitTestVisible="False">
                        <Button.Background>
                            <ImageBrush ImageSource="/FlagsWPF;component/Media/Shapes/shape2.png" />
                        </Button.Background>
                    </Button>
                </RadioButton>
                <RadioButton GroupName="ShapeGroup"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
